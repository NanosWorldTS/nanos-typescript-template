{
    "compilerOptions": {
        "target": "esnext",
        "lib": ["esnext"],
        "moduleResolution": "node",
        "outDir": "./dist",
        "baseUrl": "./src",
        "types": [
            "nanos-world-types",
            "typescript-to-lua/language-extensions"
        ],
        "strict": true
    },
    "tstl": {
        "luaTarget": "universal",
        "luaLibImport": "inline",
        "luaPlugins": [
            {"name": "./transpilers/imports.ts"}
        ]
    },
    "include":[
        "src/**/*"
    ]
}
